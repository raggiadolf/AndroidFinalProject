<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="@color/pressedPause" />
        <gradient android:angle="-90" android:startColor="@color/pressedPause" android:endColor="@color/pressedPause"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="@color/pressedPause" />
        <solid android:color="@color/pressedPause"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="@color/pauseColor" />
        <gradient android:angle="-90" android:startColor="@color/pauseColor" android:endColor="@color/pauseColor" />
    </shape>
</item>
</selector>